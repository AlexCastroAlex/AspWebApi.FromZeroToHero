@inherits LayoutComponentBase
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudNavLink Href="/" Icon="@Icons.Filled.Home">Bookstore admin</MudNavLink>
        <MudSpacer />
        <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Changer Light/Dark Mode" />
    </MudAppBar>
    <MudDrawer Open="@open">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">My App</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Icon="@Icons.Material.Filled.Book" Href="/counter">Livres</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.All">Gérer les auteurs </MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Add" Match="NavLinkMatch.All">Gérer les livres</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code {
    private MudTheme _theme = new();
    private bool _isDarkMode;
    bool open;
    MudTheme BookstoreTheme = new MudTheme()
        {
            Palette = new Palette()
            {
                Primary = Colors.Blue.Default,
                Secondary = Colors.Green.Accent4,
                AppbarBackground = Colors.Red.Default,
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Lighten1
            },

            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "260px",
                DrawerWidthRight = "300px"
            }
        };

    void ToggleDrawer()
    {
        open = !open;
    }

}